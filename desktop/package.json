{
  "name": "forestdesktop",
  "version": "1.0.0",
  "description": "Desktop application for Forest",
  "author": "Jordan Dichev",
  "scripts": {
    "start": "NODE_ENV=development electron index.js | pino-pretty",
    "start-prod": "electron index.js | pino-pretty",
    "build": "electron-builder build"
  },
  "license": "SEE LICENSE IN ../LICENSE",
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3"
  },
  "devServer": {
    "contentBase": "./dist"
  },
  "dependencies": {
    "forestconfig": "file:../config",
    "forestserver": "file:../server",
    "forestwebapp": "file:../webapp",
    "lodash.union": "^4.6.0",
    "pino": "^8.21.0",
    "pino-pretty": "^10.3.1"
  },
  "build": {
    "productName": "Kizuki",
    "appId": "com.electron.KizukiApp",
    "directories": {
      "output": "release"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    }
  }
}
